<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/background" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="193dp"
                    android:layout_height="171dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/blockbg_big" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="190dp"
                    android:layout_height="173dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/blockbg_big" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="215dp"
                    android:layout_height="171dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/blockbg_big" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/blockbg_big" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/blockbg_big" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="82dp"
                android:layout_height="92dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="93dp"
                android:layout_marginRight="93dp"
                android:layout_marginTop="46dp"
                app:srcCompat="@drawable/img01" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="82dp"
                android:layout_height="95dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView12"
                app:srcCompat="@drawable/img02" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="200sp"
                android:layout_height="35sp"
                android:layout_alignBottom="@+id/imageView12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="2011年10月10日 11：50:00"
                android:textSize="15sp"
                android:textStyle="normal|bold|italic" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/img04"
                android:layout_below="@+id/imageView13"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginTop="98dp" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/img05"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_alignTop="@+id/imageView14"
                android:layout_toRightOf="@+id/imageView14"
                android:layout_toEndOf="@+id/imageView14" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/img06"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_alignTop="@+id/imageView15"
                android:layout_toRightOf="@+id/imageView15"
                android:layout_toEndOf="@+id/imageView15"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="49dp"
                app:srcCompat="@drawable/img07"
                android:layout_below="@+id/imageView13"
                android:layout_toRightOf="@+id/imageView16"
                android:layout_toEndOf="@+id/imageView16" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/email"
                android:layout_below="@+id/imageView17"
                android:layout_alignLeft="@+id/imageView14"
                android:layout_alignStart="@+id/imageView14"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="54dp"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="175sp"
                android:layout_height="35sp"
                android:layout_alignBottom="@+id/imageView18"
                android:layout_alignLeft="@+id/imageView16"
                android:layout_alignStart="@+id/imageView16"
                android:layout_marginBottom="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="电子邮箱"
                android:textSize="30sp" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
